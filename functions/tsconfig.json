{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true, // ✅ JSONを読み込むために必要
    "moduleResolution": "node", // ✅ JSON解決のため必要
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src", "index.ts", "scripts"]
}
